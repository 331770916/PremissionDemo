<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/tools"
    android:id="@+id/Common_title"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="44dp" >

    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/title_leftLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" >

        <ImageView
            android:src="@mipmap/icon_back"
            android:padding="10dp"
            android:id="@+id/title_leftIcon"
            android:scaleType="centerInside"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/title_centerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <TextView
            android:id="@+id/title_centerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="10"
            android:ellipsize="end"
            android:textColor="#ffffff"
            android:singleLine="true"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/title_rightLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <TextView
            android:onClick="onClick"
            android:id="@+id/title_rightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:visibility="gone"
            android:paddingRight="15dp"/>

        <ImageView
            android:onClick="onClick"
            android:scaleType="centerInside"
            android:id="@+id/title_rightIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <ImageView
            android:onClick="onClick"
            android:scaleType="centerInside"
            android:id="@+id/title_rightIcon_most"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>